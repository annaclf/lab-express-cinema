<section class="single-movie">
  <div class="container">
  <div class="row">
    <div class="col-md-3">
      <img src="{{this.image}}" alt="{{this.title}}">
    </div>
    <div class="col-md-9">
      <h2>{{this.title}}</h2>
      <h3>{{this.director}}</h3>
      <h4>Stars</h4>
      <ul>
        {{#each this.stars }}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{this.description}}</p>
      <p>
        {{#each showtimes}}
          <span>{{this}} | </span>
        {{/each}}
      </p>
      </div>
  </div>
</div>
</section>
